border-bottom1px($color)
  position relative
  &::after
    position absolute
    left 0
    bottom 0
    display block
    width 100%
    border-bottom 1px solid $color
    content ''

border-none()
  position relative
  &::after
    display none

border-top1px($color)
  position relative
  &::after
    position absolute
    left 0
    top 0
    display block
    width 100%
    border-top 1px solid $color
    content ''

border-left1px($color)
  position relative
  &::after
    position absolute
    left 0
    bottom 0
    display block
    height 100%
    border-left 1px solid $color
    content ''

border-right1px($color)
  position relative
  &::after
    position absolute
    right 0
    bottom 0
    display block
    height 100%
    border-right 1px solid $color
    content ''

bg-image($url)
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image url($url + "@3x.png")
